.shopcart_container {
  position: absolute;
  top: 0;
  bottom: 0rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #F6F6F6;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.scroll{
  margin-bottom: 140rpx;
}
.shopcart_item{
  height: 240rpx;
  background-color: white;
  display: flex;
  padding: 28rpx 24rpx;
}
.shopcart_item .item_left{
  flex: 0 0 80rpx;
  padding-top: 40rpx;
}
.shopcart_item .item_center{
  flex: 0 0 160rpx;
  height: 140rpx;
  width: 140rpx;
}
.shopcart_item .item_center .image{
  width: 100%;
  height: 100%;
}
.shopcart_item .item_right{
  flex: auto;
  padding-left: 20rpx;
  position: relative;
}
.shopcart_item .item_right .item_right_line2{
  margin-top: 28rpx;
}
.shopcart_item .item_right .item_right_line2 .line2_box{
  background-color: #efefef;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  float: left;
  padding:0 16rpx;
  color: #646464;
}
.shopcart_item .item_right .item_right_line3{
  position: absolute;
  left: 20rpx;
  right: 0px;
  bottom: 0px;
}
.shopcart_item .item_right .item_right_line3 .line3_left{
  float: left;
  color:#FF6000;
  font-size: 42rpx;
}
.shopcart_item .item_right .item_right_line3 .line3_right{
  float: right;
}
.shopcart_item .item_right .item_right_line3 .line3_right .add{
  float: right;
  color: #48C23D;
  font-size: 40rpx;
}
.shopcart_item .item_right .item_right_line3 .line3_right .input_number{
  float: right;
  width: 60rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: #646464;
  /* background-color: #efefef; */
}
.shopcart_item .item_right .item_right_line3 .line3_right .sub{
  float: right;
  color: #48C23D;
  font-size: 40rpx;
}
.submit_style{
  background-color: #FF6000 !important;
}


.flow-btn-min {
  background: #fff;
  border: 1rpx solid #ccc;
  height: 30px;
  line-height: 30px;
  font-size: 28rpx;
  width: 200rpx;
  margin: 0 auto;
  border-radius: 5px;
  text-align: center;
  color: #777;
  margin-top: 25rpx;
}

